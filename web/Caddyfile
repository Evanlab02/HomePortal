localhost,
192.168.50.154:80,
192.168.50.154:8000,
192.168.50.2:80,
192.168.50.2:8000 {
	handle_path /* {
		reverse_proxy hp-flame:5005
	}

	handle_path /download/certs/* {
		root * /var/www/public/certs
		@crt path *.crt
		header @crt Content-Disposition attachment
		file_server browse
	}
}

